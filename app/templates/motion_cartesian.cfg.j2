[stepper_x]
step_pin: {{ pins.stepper_x_step }}
dir_pin: {{ pins.stepper_x_dir }}
enable_pin: {{ pins.stepper_x_enable }}
microsteps: {{ override("motion.stepper_x_microsteps", 16) }}
rotation_distance: {{ override("motion.stepper_x_rotation_distance", 40.0) }}
endstop_pin: {{ override("motion.stepper_x_endstop_pin", "^PA15") }}
position_endstop: 0
position_max: {{ project.dimensions.x }}
homing_speed: {{ override("motion.homing_speed", 40) }}

[stepper_y]
step_pin: {{ pins.stepper_y_step }}
dir_pin: {{ pins.stepper_y_dir }}
enable_pin: {{ pins.stepper_y_enable }}
microsteps: {{ override("motion.stepper_y_microsteps", 16) }}
rotation_distance: {{ override("motion.stepper_y_rotation_distance", 40.0) }}
endstop_pin: {{ override("motion.stepper_y_endstop_pin", "^PB15") }}
position_endstop: 0
position_max: {{ project.dimensions.y }}
homing_speed: {{ override("motion.homing_speed", 40) }}

[stepper_z]
step_pin: {{ pins.stepper_z_step }}
dir_pin: {{ pins.stepper_z_dir }}
enable_pin: {{ pins.stepper_z_enable }}
microsteps: {{ override("motion.stepper_z_microsteps", 16) }}
rotation_distance: {{ override("motion.stepper_z_rotation_distance", 8.0) }}
endstop_pin: {% if project.probe.enabled %}probe:z_virtual_endstop{% else %}^PC15{% endif %}
position_max: {{ project.dimensions.z }}
position_min: -2
homing_speed: {{ override("motion.z_homing_speed", 10) }}

[extruder]
step_pin: {{ pins.extruder_step }}
dir_pin: {{ pins.extruder_dir }}
enable_pin: {{ pins.extruder_enable }}
microsteps: {{ override("motion.extruder_microsteps", 16) }}
rotation_distance: {{ override("motion.extruder_rotation_distance", 22.4) }}
nozzle_diameter: {{ override("motion.nozzle_diameter", 0.4) }}
filament_diameter: {{ override("motion.filament_diameter", 1.75) }}

{% if project.probe.enabled %}
[probe]
pin: {{ pins.probe }}
x_offset: {{ override("probe.x_offset", 0.0) }}
y_offset: {{ override("probe.y_offset", 0.0) }}
z_offset: {{ override("probe.z_offset", 0.0) }}
speed: {{ override("probe.speed", 5.0) }}
samples: {{ override("probe.samples", 2) }}
{% endif %}

